@model WebApplication15.Models.Cart

@{
    ViewBag.Title = "Giỏ hàng";

    // --- LOGIC HIỂN THỊ (SERVER) ---
    var discObj = Session["DiscountAmount"];
    decimal discountAmountDecimal = 0m;
    if (discObj != null)
    {
        try { discountAmountDecimal = Convert.ToDecimal(discObj); } catch { discountAmountDecimal = 0m; }
    }
    var discountCode = Session["DiscountCode"] as string ?? string.Empty;

    decimal subTotalValue = Model.TongThanhTien();
    decimal finalTotalValue = subTotalValue - discountAmountDecimal;
    if (finalTotalValue < 0) { finalTotalValue = 0; }

    bool hasDiscount = discountAmountDecimal > 0m;
    string discountAmountFormatted = discountAmountDecimal.ToString("N0") + "₫";
    string subTotalFormatted = subTotalValue.ToString("N0") + "₫";
    string finalTotalFormatted = finalTotalValue.ToString("N0") + "₫";
}

<div class="container py-5">
    <div class="d-flex align-items-center mb-4">
        <i class="bi bi-cart3 fs-3 me-2 text-primary"></i>
        <h2 class="mb-0 fw-bold">Giỏ hàng của bạn (@Model.list.Count sản phẩm)</h2>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-3 mb-4">
                <div class="card-body p-0">
                    @if (Model.list.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th scope="col" class="py-3 ps-4" style="width: 40%;">Sản phẩm</th>
                                        <th scope="col" class="py-3 text-center">Giá</th>
                                        <th scope="col" class="py-3 text-center" style="width: 20%;">Số lượng</th>
                                        <th scope="col" class="py-3 text-end">Thành tiền</th>
                                        <th scope="col" class="py-3 text-center" style="width: 5%;"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.list)
                                    {
                                        <tr>
                                            <td class="ps-4">
                                                <div class="d-flex align-items-center">
                                                    <div class="flex-shrink-0">
                                                        <img src="@Url.Content("~/Content/images/" + item.AnhBia)"
                                                             class="img-fluid rounded border"
                                                             alt="@item.TenSP"
                                                             style="width: 70px; height: 70px; object-fit: cover;">
                                                    </div>
                                                    <div class="flex-grow-1 ms-3">
                                                        <h6 class="mb-0 fw-bold text-dark">
                                                            <a href="#" class="text-decoration-none text-dark">@item.TenSP</a>
                                                        </h6>
                                                        <small class="text-muted">Mã SP: @item.MaSP</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center">
                                                <span class="fw-semibold text-dark">@item.GiaBan.ToString("N0")₫</span>
                                            </td>
                                            <td class="text-center">
                                                <div class="d-flex justify-content-center align-items-center">
                                                    <a href="@Url.Action("UpdateSLCart", "GioHang", new { id = item.MaSP, num = -1 })"
                                                       class="btn btn-sm btn-outline-secondary rounded-end-0" style="width: 30px;">-</a>

                                                    <input type="text" value="@item.SoLuong" class="form-control text-center rounded-0 border-secondary" style="width: 50px;" readonly />

                                                    <a href="@Url.Action("UpdateSLCart", "GioHang", new { id = item.MaSP, num = 1 })"
                                                       class="btn btn-sm btn-outline-secondary rounded-start-0" style="width: 30px;">+</a>
                                                </div>
                                            </td>
                                            <td class="text-end fw-bold text-primary">
                                                @item.ThanhTien.ToString("N0")₫
                                            </td>
                                            <td class="text-center pe-3">
                                                <a href="@Url.Action("RemoveFromCart", "GioHang", new { id = item.MaSP })"
                                                   class="text-danger" onclick="return confirm('Xóa sản phẩm?');">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <p class="fs-5 text-muted">Giỏ hàng trống</p>
                            <a href="/" class="btn btn-primary mt-2">Mua sắm ngay</a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-3" style="position: sticky; top: 20px;">
                <div class="card-header bg-white py-3 border-bottom">
                    <h5 class="mb-0 fw-bold">Tóm tắt đơn hàng</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2 text-muted">
                        <span>Tạm tính:</span>
                        <span id="subTotal">@subTotalFormatted</span>
                    </div>

                    <div class="d-flex justify-content-between mb-3 text-muted">
                        <span>Phí vận chuyển:</span>
                        <span class="text-success">Miễn phí</span>
                    </div>

                    <div class="d-flex justify-content-between mb-3 text-success fw-bold" id="discountRow" style="display:@(hasDiscount ? "flex" : "none");">
                        <span>Voucher giảm:</span>
                        <span id="discountAmount">-@discountAmountFormatted</span>
                    </div>

                    <div class="input-group mb-3">
                        <input type="text" id="couponCodeInput" class="form-control" placeholder="Mã giảm giá (VD: SALE50)" value="@discountCode" @(hasDiscount ? "readonly" : "")>
                        <button class="btn @(hasDiscount ? "btn-success" : "btn-outline-secondary")" type="button" id="btnApplyCoupon" @(hasDiscount ? "disabled" : "")>@(hasDiscount ? "Đã áp dụng" : "Áp dụng")</button>
                    </div>
                    <div id="couponMessage" class="small mb-2"></div>

                    @Html.AntiForgeryToken()

                    <hr class="my-3">

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <span class="fw-bold fs-5">Tổng cộng:</span>
                        <span class="fw-bold fs-4 text-primary" id="finalTotal">@finalTotalFormatted</span>
                    </div>

                    @if (Model.list.Count > 0)
                    {
                        <a href="@Url.Action("PaymentConfirm", "GioHang")" class="btn btn-primary w-100 py-2 fw-bold text-uppercase rounded-3 shadow-sm">
                            Tiến hành Thanh toán
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        console.log("Script giỏ hàng đang chạy...");

        $(document).off('click', '#btnApplyCoupon').on('click', '#btnApplyCoupon', function (e) {
            e.preventDefault();

            var btn = $(this);
            var code = $('#couponCodeInput').val();
            var messageBox = $('#couponMessage');

            // Chặn click liên tục
            if (btn.prop('disabled')) return;

            if (!code) {
                messageBox.text("Vui lòng nhập mã giảm giá").removeClass("text-success").addClass("text-danger");
                return;
            }

            var originalText = "Áp dụng";
            btn.prop('disabled', true).text('Đang xử lý...');
            messageBox.text("");

            $.ajax({
                url: '/GioHang/ApplyDiscountAjax',
                type: 'POST',
                data: { maGiamGia: code },
                success: function (res) {
                    if (res.success) {
                        // --- ĐOẠN QUAN TRỌNG NHẤT ---
                        // Thay vì reload(), ta điều hướng thẳng về link Giỏ Hàng
                        // Cách này ép trình duyệt phải gọi lại Server để lấy số liệu mới nhất
                        // Force reload the current page so server-rendered totals update
                        try { window.location.reload(); } catch (e) { window.location.href = '@Url.Action("Index", "GioHang")'; }
                    } else {
                        // Nếu lỗi thì hiện thông báo, không reload
                        btn.prop('disabled', false).text(originalText);
                        messageBox.removeClass("text-success").addClass("text-danger").text(res.message);
                        $('[id="discountRow"]').hide();
                    }
                },
                error: function (xhr) {
                    console.error('Lỗi Ajax:', xhr);
                    btn.prop('disabled', false).text(originalText);
                    messageBox.text('Lỗi kết nối. Vui lòng thử lại.').addClass("text-danger");
                }
            });
        });
    });
</script>