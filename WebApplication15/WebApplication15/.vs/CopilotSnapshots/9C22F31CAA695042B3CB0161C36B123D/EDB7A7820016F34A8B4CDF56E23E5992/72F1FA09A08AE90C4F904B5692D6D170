@section scripts {
    <script>
        $(document).ready(function () {
            console.log("Script giỏ hàng đã sẵn sàng!");

            $('#btnApplyCoupon').click(function (e) {
                e.preventDefault();

                var code = $('#couponCodeInput').val();
                var messageBox = $('#couponMessage');
                var btn = $(this);

                if (!code) {
                    messageBox.text("Vui lòng nhập mã giảm giá").removeClass("text-success").addClass("text-danger");
                    return;
                }

                var antiForgeryToken = $('input[name="__RequestVerificationToken"]').val();

                var originalText = btn.text();
                btn.prop('disabled', true).text('Đang check...');

                // Prefer the secure endpoint but fallback to AJAX-only one for debugging
                var url = '@Url.Action("ApplyDiscount", "GioHang")';

                $.ajax({
                    url: url,
                    type: 'POST',
                    headers: {
                        'RequestVerificationToken': antiForgeryToken,
                        '__RequestVerificationToken': antiForgeryToken
                    },
                    data: { code: code, __RequestVerificationToken: antiForgeryToken },
                    success: function (res) {
                        handleCouponResponse(res, btn, messageBox);
                    },
                    error: function (xhr) {
                        // If secure endpoint fails (likely antiforgery), try fallback no-token endpoint
                        console.warn('ApplyDiscount failed, trying AJAX fallback', xhr.status);

                        $.ajax({
                            url: '@Url.Action("ApplyDiscountAjax", "GioHang")',
                            type: 'POST',
                            data: { code: code },
                            success: function (res) {
                                handleCouponResponse(res, btn, messageBox);
                            },
                            error: function (xhr2) {
                                console.error('Fallback coupon AJAX failed', xhr2);
                                btn.prop('disabled', false).text(originalText);
                                messageBox.text('Lỗi kết nối server. Vui lòng thử lại.').addClass('text-danger');
                            }
                        });
                    }
                });

                function handleCouponResponse(res, btn, messageBox) {
                    btn.prop('disabled', false).text(originalText);
                    if (res.success) {
                        messageBox.removeClass("text-danger").addClass("text-success").text(res.message);
                        $('#discountRow').show();
                        $('#discountAmount').text("-" + res.discountAmount);
                        $('#finalTotal').text(res.newTotal);
                        if (res.newSubTotal) { $('#subTotal').text(res.newSubTotal); }
                        $('#couponCodeInput').prop('readonly', true);
                        btn.text('Đã áp dụng').prop('disabled', true).removeClass('btn-outline-secondary').addClass('btn-success');
                    } else {
                        messageBox.removeClass("text-success").addClass("text-danger").text(res.message);
                        $('#discountRow').hide();
                        $('#finalTotal').text($('#subTotal').text());
                    }
                }
            });
        });
    </script>
}