    @model WebApplication15.Models.SanPham

    @{
        ViewBag.Title = "Sửa sản phẩm";
        Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; // use existing admin layout
    }

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Sửa thông tin sản phẩm</h6>
        </div>
        <div class="card-body">
            <div class="alert alert-info">
                <strong>ℹ️ Lưu ý:</strong> Số lượng tồn kho không thể chỉnh sửa trực tiếp. Để cập nhật số lượng, vui lòng sử dụng chức năng <a href="@Url.Action("Create", "PhieuNhap")" class="alert-link"><strong>Nhập Hàng</strong></a>.
            </div>

            @using (Html.BeginForm("Edit", "SanPham", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @* Hidden ID để Controller biết đang sửa dòng nào *@
                    @Html.HiddenFor(model => model.MaSP)

                    @* Giữ lại tên ảnh cũ phòng trường hợp user không up ảnh mới *@
                    @Html.HiddenFor(model => model.HinhAnh)

                    @* Tên sản phẩm *@
                    <div class="form-group row">
                        @Html.LabelFor(model => model.TenSP, "Tên sản phẩm", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TenSP, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenSP, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @* Giá bán *@
                    <div class="form-group row">
                        @Html.LabelFor(model => model.GiaBan, "Giá bán", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.GiaBan, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                            @Html.ValidationMessageFor(model => model.GiaBan, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @* Trạng thái kinh doanh (select) *@
                    <div class="form-group row">
                        @Html.LabelFor(model => model.TrangThaiSanPham, "Trạng thái", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(m => m.TrangThaiSanPham,
                                new List<SelectListItem> {
                                    new SelectListItem { Text = "Kinh doanh", Value = "Kinh doanh" },
                                    new SelectListItem { Text = "Tạm ngưng", Value = "Tạm ngưng" },
                                    new SelectListItem { Text = "Ngừng kinh doanh", Value = "Ngừng kinh doanh" }
                            }, "-- Chọn trạng thái --", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.TrangThaiSanPham, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @* Hiển thị số lượng tồn chỉ để xem (read-only) *@
                    <div class="form-group row">
                        @Html.Label("Số lượng tồn kho", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input type="text" value="@(Model.SoLuongTon ?? 0)" class="form-control" readonly disabled />
                            <small class="form-text text-muted">Số lượng tồn chỉ được cập nhật thông qua phiếu nhập hàng.</small>
                        </div>
                    </div>

                    @* Mô tả *@
                    <div class="form-group row">
                        @Html.LabelFor(model => model.MoTa, "Mô tả", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control", rows = "4" })
                            @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @* Loại sản phẩm *@
                    <div class="form-group row">
                        @Html.LabelFor(model => model.MaLoai, "Loại sản phẩm", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("MaLoai", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MaLoai, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @* Thương hiệu *@
                    <div class="form-group row">
                        @Html.LabelFor(model => model.MaTH, "Thương hiệu", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("MaTH", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MaTH, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @* Danh mục *@
                    <div class="form-group row">
                        @Html.LabelFor(model => model.MaDM, "Danh mục", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("MaDM", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MaDM, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @* Hình ảnh *@
                    <div class="form-group row">
                        @Html.Label("Hình ảnh", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @* Hiển thị ảnh hiện tại *@
                            @if (!string.IsNullOrEmpty(Model.HinhAnh))
                            {
                                <div class="mb-2">
                                    <img src="@Url.Content("~/Content/images/" + Model.HinhAnh)" alt="Ảnh hiện tại" style="width: 150px; height: auto; object-fit: cover; border: 1px solid #ddd;" />
                                </div>
                            }

                            @* Input chọn ảnh mới *@
                            <input type="file" name="ImageUpload" class="form-control-file" accept="image/*" />
                            <small class="text-muted">Để trống nếu không muốn thay đổi ảnh.</small>
                            @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @* Nút Submit *@
                    <div class="form-group row mt-4">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
                            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary ml-2" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>