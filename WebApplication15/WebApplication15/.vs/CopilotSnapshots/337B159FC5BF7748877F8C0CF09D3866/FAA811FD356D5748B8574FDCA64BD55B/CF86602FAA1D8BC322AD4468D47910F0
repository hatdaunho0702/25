    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>➕ Thêm sản phẩm mới</h2>

<div class="alert alert-info">
    <strong>ℹ️ Lưu ý:</strong> Sản phẩm mới sẽ có số lượng tồn kho là <strong>0</strong>. Để nhập hàng và cập nhật số lượng, vui lòng sử dụng chức năng <a href="@Url.Action("Create", "PhieuNhap")" class="alert-link"><strong>Nhập Hàng</strong></a> sau khi tạo sản phẩm.
</div>

@using (Html.BeginForm("Create", "SanPham", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Tên Sản Phẩm <span class="text-danger">*</span></label>
            @Html.TextBoxFor(m => m.TenSP, new { @class = "form-control", required = "required" })
        </div>
        <div class="form-group col-md-3">
            <label>Giá Bán <span class="text-danger">*</span></label>
            @Html.TextBoxFor(m => m.GiaBan, new { @class = "form-control", type = "number", step = "1000", required = "required" })
