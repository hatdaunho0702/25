@model WebApplication15.Models.DonHang
@{
    ViewBag.Title = "Thanh toán QR";
}

<div class="container py-5">
    <h2 class="text-center mb-4">Thanh toán bằng QR</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body text-center">
                    <h5 class="mb-3">Quét mã QR</h5>
                    <img src="~/Content/images/QR.jpg" style="max-width:250px;" class="img-fluid mb-3" />

                    <hr />

                    <p><b>Số tiền:</b> <span class="text-danger">@Model.TongTien.Value.ToString("N0") đ</span></p>
                    <p><b>Mã đơn:</b> #@Model.MaDH</p>

                    <a href="@Url.Action("ConfirmPaymentComplete", "GioHang", new { maDH = Model.MaDH })"
                       class="btn btn-primary w-100 mt-3">
                        Tôi đã thanh toán
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>