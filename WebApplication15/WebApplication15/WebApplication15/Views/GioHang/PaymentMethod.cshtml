@model WebApplication15.Models.DonHang
@{
    ViewBag.Title = "Chọn phương thức thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h4 class="mb-0 fw-bold">Chọn phương thức thanh toán</h4>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-light border mb-4">
                        <div class="d-flex justify-content-between">
                            <strong>Mã đơn hàng:</strong>
                            <span>#@Model.MaDH</span>
                        </div>
                        <div class="d-flex justify-content-between mt-2">
                            <strong>Tổng thanh toán:</strong>
                            <span class="text-danger fw-bold fs-5">@Model.TongTien.Value.ToString("N0") ₫</span>
                        </div>
                    </div>

                    <h5 class="mb-3 text-muted">Danh sách phương thức:</h5>

                    <div class="list-group">
                        <a href="@Url.Action("ThanhToanVNPay", "GioHang", new { maDH = Model.MaDH })"
                           class="list-group-item list-group-item-action d-flex align-items-center p-3 mb-2 border rounded shadow-sm">
                            <div class="me-3">
                                <img src="https://vnpay.vn/assets/images/logo-icon/logo-primary.svg" alt="VNPay" width="50">
                            </div>
                            <div>
                                <h6 class="mb-1 fw-bold text-primary">Thanh toán qua VNPay</h6>
                                <small class="text-muted">Thanh toán qua thẻ ATM, Tài khoản ngân hàng, QR Pay</small>
                            </div>
                            <i class="bi bi-chevron-right ms-auto"></i>
                        </a>

                        <a href="@Url.Action("ThanhToanCOD", "GioHang", new { maDH = Model.MaDH })"
                           class="list-group-item list-group-item-action d-flex align-items-center p-3 mb-2 border rounded shadow-sm">
                            <div class="me-3 fs-2 text-success">
                                <i class="bi bi-cash-stack"></i>
                            </div>
                            <div>
                                <h6 class="mb-1 fw-bold">Thanh toán khi nhận hàng (COD)</h6>
                                <small class="text-muted">Nhận hàng rồi mới trả tiền mặt</small>
                            </div>
                        </a>

                        <a href="@Url.Action("ThanhToanChuyenKhoan", "GioHang", new { maDH = Model.MaDH })"
                           class="list-group-item list-group-item-action d-flex align-items-center p-3 mb-2 border rounded shadow-sm">
                            <div class="me-3 fs-2 text-info">
                                <i class="bi bi-bank"></i>
                            </div>
                            <div>
                                <h6 class="mb-1 fw-bold">Chuyển khoản ngân hàng</h6>
                                <small class="text-muted">Chuyển khoản thủ công tới STK cửa hàng</small>
                            </div>
                        </a>

                        <a href="@Url.Action("ThanhToanQR", "GioHang", new { maDH = Model.MaDH })"
                           class="list-group-item list-group-item-action d-flex align-items-center p-3 mb-2 border rounded shadow-sm">
                            <div class="me-3 fs-2 text-dark">
                                <i class="bi bi-qr-code-scan"></i>
                            </div>
                            <div>
                                <h6 class="mb-1 fw-bold">Quét mã QR (Cửa hàng)</h6>
                                <small class="text-muted">Quét mã VietQR của chủ shop</small>
                            </div>
                        </a>
                    </div>

                    <div class="text-center mt-4">
                        <a href="@Url.Action("LuuThongTinNhanHang", new { maDH = Model.MaDH })" class="text-decoration-none text-muted">
                            <i class="bi bi-arrow-left"></i> Quay lại sửa thông tin
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>