@model IEnumerable<WebApplication15.Models.NhaCungCap>
@{
    ViewBag.Title = "Quản lý Nhà cung cấp";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Quản lý Nhà cung cấp</h1>
        <a href="@Url.Action("Create", "NhaCungCap", new { area = "Admin" })" class="btn btn-primary shadow-sm">
            <i class="fa-solid fa-plus"></i> Thêm nhà cung cấp
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách nhà cung cấp</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-datatable" width="100%" cellspacing="0">
                    <thead class="table-light">
                        <tr>
                            <th>Mã NCC</th>
                            <th>Tên NCC</th>
                            <th>Địa chỉ</th>
                            <th>SĐT</th>
                            <th>Email</th>
                            <th>Người liên hệ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>#@item.MaNCC</td>
                                    <td>@item.TenNCC</td>
                                    <td>@item.DiaChi</td>
                                    <td>@item.SoDienThoai</td>
                                    <td>@item.Email</td>
                                    <td>@item.NguoiLienHe</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
