@model WebApplication15.Areas.Admin.Data.TaiKhoanCreateVM

<h2>📝 Thêm tài khoản</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <!-- Tên đăng nhập -->
    <div class="form-group">
        <label>Tên đăng nhập</label>
        @Html.TextBoxFor(m => m.TenDangNhap, new { @class = "form-control" })
    </div>

    <!-- Mật khẩu -->
    <div class="form-group">
        <label>Mật khẩu</label>
        @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control" })
    </div>

    <!-- Nhập lại mật khẩu -->
    <div class="form-group">
        <label>Nhập lại mật khẩu</label>
        @Html.PasswordFor(m => m.NhapLaiMatKhau, new { @class = "form-control" })
    </div>

    <!-- Vai trò -->
    <div class="form-group">
        <label>Vai Trò</label>
        @Html.DropDownListFor(m => m.VaiTro, new List<SelectListItem>
        {
            new SelectListItem { Text = "Admin", Value = "Admin" },
            new SelectListItem { Text = "User", Value = "User" }
        }, "-- Chọn Vai Trò --", new { @class = "form-control", required = "required" })
    </div>

    <!-- Họ tên người dùng -->
    <div class="form-group">
        <label>Họ tên người dùng</label>
        @Html.TextBoxFor(m => m.HoTenNguoiDung, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Thêm mới</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Hủy</a>
}
