@model WebApplication15.Models.NguoiDung

@{
    ViewBag.Title = "Chỉnh sửa thông tin";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-warning text-white">
                    <h3 class="font-weight-light my-2">Chỉnh Sửa Thông Tin</h3>
                </div>

                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.MaND)
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.HoTen, new { @class = "small mb-1" })
                                    @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control py-4", placeholder = "Nhập họ và tên" } })
                                    @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.SoDienThoai, new { @class = "small mb-1" })
                                    @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control py-4", placeholder = "Nhập số điện thoại" } })
                                    @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.DiaChi, new { @class = "small mb-1" })
                            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control py-4", placeholder = "Nhập địa chỉ chi tiết" } })
                            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.GioiTinh, new { @class = "small mb-1" })
                                    @Html.EditorFor(model => model.GioiTinh, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.NgaySinh, new { @class = "small mb-1" })
                                    @Html.TextBoxFor(model => model.NgaySinh, "{0:yyyy-MM-dd}", new { @class = "form-control py-4", type = "date" })
                                    @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.NgayTao, new { @class = "small mb-1" })
                            @Html.TextBoxFor(model => model.NgayTao, "{0:yyyy-MM-dd}", new { @class = "form-control py-4", @readonly = "readonly" })
                        </div>

                        <div class="form-group mt-4 mb-0">
                            <div class="d-flex justify-content-between">
                                <a href="@Url.Action("Index")" class="btn btn-secondary shadow-sm">
                                    <i class="fa fa-arrow-left"></i> Quay lại
                                </a>
                                <button type="submit" class="btn btn-warning shadow-sm px-4">
                                    <i class="fa fa-save"></i> Lưu thay đổi
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>