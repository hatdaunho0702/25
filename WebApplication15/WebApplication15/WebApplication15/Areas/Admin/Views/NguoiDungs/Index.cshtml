@model IEnumerable<WebApplication15.Models.NguoiDung>

@{
    ViewBag.Title = "Danh sách người dùng";
}

<div class="container-fluid mt-4">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center bg-white">
            <h5 class="m-0 font-weight-bold text-primary">Danh Sách Người Dùng</h5>
            <form class="form-inline" method="get" action="@Url.Action("Index")">
                <div class="input-group">
                    <input type="text" name="search" value="@(ViewBag.Search ?? "")" class="form-control form-control-sm" placeholder="Tìm theo tên, sđt, địa chỉ..." />
                    <div class="input-group-append">
                        <button class="btn btn-sm btn-outline-primary" type="submit">Tìm</button>
                    </div>
                </div>
            </form>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-light text-center">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.HoTen)</th>
                            <th>@Html.DisplayNameFor(model => model.SoDienThoai)</th>
                            <th>@Html.DisplayNameFor(model => model.DiaChi)</th>
                            <th width="100px">@Html.DisplayNameFor(model => model.GioiTinh)</th>
                            <th>@Html.DisplayNameFor(model => model.NgaySinh)</th>
                            <th>@Html.DisplayNameFor(model => model.NgayTao)</th>
                            <th width="200px">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle font-weight-bold text-dark">
                                    @Html.DisplayFor(modelItem => item.HoTen)
                                </td>
                                <td class="align-middle">
                                    @Html.DisplayFor(modelItem => item.SoDienThoai)
                                </td>
                                <td class="align-middle">
                                    @Html.DisplayFor(modelItem => item.DiaChi)
                                </td>
                                <td class="align-middle text-center">
                                    @Html.DisplayFor(modelItem => item.GioiTinh)
                                </td>
                                <td class="align-middle">
                                    @if (item.NgaySinh != null)
                                    {
                                        @Convert.ToDateTime(item.NgaySinh).ToString("dd/MM/yyyy")
                                    }
                                </td>
                                <td class="align-middle text-muted small">
                                    @if (item.NgayTao != null)
                                    {
                                        @Convert.ToDateTime(item.NgayTao).ToString("dd/MM/yyyy")
                                    }
                                </td>
                                <td class="align-middle text-center">
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Edit", new { id = item.MaND })" class="btn btn-warning btn-sm" title="Sửa">
                                            Sửa
                                        </a>
                                        <a href="@Url.Action("Details", new { id = item.MaND })" class="btn btn-info btn-sm" title="Chi tiết">
                                            Xem
                                        </a>

                                        @using (Html.BeginForm("Delete", "NguoiDungs", FormMethod.Post, new { area = "Admin", @class = "d-inline" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            @Html.Hidden("id", item.MaND)
                                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn chắc chắn muốn xóa người dùng này?')" title="Xóa">Xóa</button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>