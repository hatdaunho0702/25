@model WebApplication15.Models.ThuongHieu
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Sửa Thương Hiệu";
}

<h2>✏️ Sửa Thương Hiệu</h2>

@using (Html.BeginForm("Edit", "ThuongHieu", FormMethod.Post, new { @class = "mt-3" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.MaTH)

    <div class="form-group mb-3">
        <label for="TenTH">Tên Thương Hiệu <span class="text-danger">*</span></label>
        @Html.TextBoxFor(m => m.TenTH, new { @class = "form-control", required = "required", placeholder = "Nhập tên thương hiệu" })
        @Html.ValidationMessageFor(m => m.TenTH, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        <label for="QuocGia">Quốc Gia</label>
        @Html.TextBoxFor(m => m.QuocGia, new { @class = "form-control", placeholder = "Ví dụ: Hàn Quốc, Pháp, Nhật Bản..." })
        @Html.ValidationMessageFor(m => m.QuocGia, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mt-4">
        <button type="submit" class="btn btn-primary">✅ Cập Nhật</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">❌ Hủy</a>
    </div>
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
